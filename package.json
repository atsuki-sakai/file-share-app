		"lucide-react": "^0.526.0",
		"next": "^14.2.0",
		"next-intl": "^4.3.4",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tailwind-merge": "^3.3.1",
		"tailwindcss-animate": "^1.0.7"
